# Terraform backend config - copy to .env.local and fill in values from bootstrap output
# Bash: set -a && source infra/.env.local && set +a
# PowerShell: Get-Content infra/.env.local | ForEach-Object { if ($_ -match '^([^#][^=]+)=(.*)$') { Set-Item -Path "Env:$($matches[1].Trim())" -Value $matches[2].Trim() } }

TF_BACKEND_RG=<resource-group-name>
TF_BACKEND_SA=<storage-account-name>
TF_BACKEND_CONTAINER=tfstate
